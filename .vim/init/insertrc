" Emacs
imap <C-e> <END>
imap <C-g> <ESC>

" map th :tabnext<CR>
nmap tl :tabprev<CR>
nmap tn :tabnew<CR>
nmap td :tabclose<CR>

imap <C-k> <Up>
imap <C-p> <Up>
" imap <C-h> <Left>
imap <C-b> <Left>
imap <C-l> <Right>
imap <C-f> <Right>
imap <C-j> <Down>
imap <C-n> <Down>

inoremap <silent> <Esc> <Esc>
inoremap <silent> <C-[> <Esc>

nnoremap <Space>np :<C-u>set paste!<CR>
vnoremap <silent>a ::Tabularize/=<CR>

" out insert mode to IME off
" set noimdisable
" http://www.geocities.co.jp/SiliconValley-SantaClara/1183/computer/gvim.html
set iminsert=0
set imsearch=0

" コメントアウト勝手に入るの止める
set formatoptions-=ro


" Gundo
nmap <Leader>g :GundoToggle<CR>
