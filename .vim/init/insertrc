" Emacs
imap <C-e> <END>
imap <C-g> <ESC>
" noremap ; :
" noremap : ;

" map th :tabnext<CR>
nmap tl :tabprev<CR>
nmap tn :tabnew<CR>
nmap td :tabclose<CR>

imap <C-k> <Up>
imap <C-h> <Left>
imap <C-l> <Right>
imap <C-j> <Down>

inoremap :set iminsert=0

inoremap <silent> <Esc> <Esc>
inoremap <silent> <C-[> <Esc>

nnoremap <Space>np :<C-u>set paste!<CR>

" out insert mode to IME off
" set noimdisable
set imdisable
" http://www.geocities.co.jp/SiliconValley-SantaClara/1183/computer/gvim.html
set iminsert=0
set imsearch=0

set noautoindent 
set nosmartindent 
set nocindent 
set nocopyindent
set nopaste

set nomousefocus
set mousehide

set formatoptions-=ro

augroup vimrc_group_formatoptions
    autocmd!
    autocmd FileType * setlocal formatoptions-=ro
augroup END
