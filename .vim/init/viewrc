set expandtab           " change tab into space
set shiftwidth=4        " tab width
set tabstop=4           " tab width
set softtabstop=4       " tab width
set showmatch           " match kakko
set cmdheight=2
set showcmd
set title
set ignorecase          " not distinct UPCASE downcase
set wildmode=list:full  " complete
set wildmenu            " complete
set listchars=tab:>-    " view tab
set list                " view \n
set ruler               " view ruler
set incsearch
set hlsearch
set nowrap
" set guioptions-=r       " disable right scrollbar
" set guioptions-=l       " disable left scrollbar
" set guioptions-=T       " disable toolber
" 
" set guioptions-=L
" set guioptions-=m       " disable menu
" set guioptions+=c

set list
set listchars=tab:>-,trail:-,extends:>,precedes:<
set display=uhex

set tw=0                " disable auto indent

syntax on               " view source code highlight

if &t_Co > 2 || has("gui_running")
  syntax on
  set hlsearch
endif

" set shortmess+=I
" set lines=70 columns=210

colorscheme molokai
" set background=dark
" colorscheme solarized
" colorscheme zenburn

